{
  "manifest_version": 3,
  "name": "FactSticker",
  "version": "1.0",
  "description": "Quiz yourself on any article you're reading",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_title": "Start Quiz"
  },
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": ["http://127.0.0.1:5001/*", "http://localhost:5001/*"]
  }
}
